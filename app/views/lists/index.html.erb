<h1 class="mx-3">All lists</h1>

<div class="row mb-3 mx-3">
  <% @lists.each do |list| %>
    <div class="col-sm-4">
      <div class="card mb-3">
      <%= cl_image_tag list.photo.key, crop: :fill, class:"card-img-top", width: 500, height: 300%>
        <div class="card-body">
          <h5 class="card-title"><%= list.name %></h5>
          <p class="card-text"><%= list.bookmarks.count %> bookmarks</p>
          <%= link_to "View list", list_path(list), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to 'New List', new_list_path, class:"btn btn-primary mb-3 mx-3" %>
