<h1>Create a new list and add movies to it</h1>

<%= simple_form_for @list, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name, label: "List name", placeholder: "Enter a name for your list" %>

      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, label: 'Select a movie', collection: Movie.all, include_blank: false %>
        <%= f.input :comment, label: 'Comment', placeholder: 'Enter a comment for this bookmark' %>

        <%= f.button :submit, 'Create Bookmark', class: 'btn btn-primary' %>
      <% end %>

  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
